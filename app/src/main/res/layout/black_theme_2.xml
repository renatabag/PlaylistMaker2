<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:layout_gravity="start"
            android:text="Назад"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:gravity="start"
            android:backgroundTint="@color/white"
            app:cornerRadius="0dp"
            android:text="Темная тема"
            android:textSize="@dimen/button_corner_radius"
            android:textColor="@color/white"
            app:icon="@drawable/control"
            app:iconTint="@color/white"
            app:iconGravity="end"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:gravity="start"
            app:cornerRadius="0dp"
            android:text="Поделиться приложением"
            android:textSize="@dimen/button_corner_radius"
            android:textColor="@color/white"
            app:icon="@drawable/share"
            app:iconTint="@color/white"
            app:iconGravity="end"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:gravity="start"
            app:cornerRadius="0dp"
            android:text="Написать в поддержку"
            android:textSize="@dimen/button_corner_radius"
            android:textColor="@color/white"
            app:icon="@drawable/support"
            app:iconTint="@color/white"
            app:iconGravity="end"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            app:cornerRadius="0dp"
            android:text="Пользовательское соглашение"
            android:gravity="start"
            android:textSize="@dimen/button_corner_radius"
            android:textColor="@color/white"
            app:icon="@drawable/open"
            app:iconTint="@color/white"
            app:iconGravity="end"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>