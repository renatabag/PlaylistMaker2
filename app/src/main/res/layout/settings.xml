<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFF"
            android:layout_gravity="start"
            android:text="Назад"
            android:textColor="#1A1B22"
            android:textSize="22sp"
            app:icon="@drawable/back"
            app:iconGravity="textStart"
            app:iconTint="#000000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF"
            android:gravity="start"
            android:backgroundTint="#ffffff"
            app:cornerRadius="0dp"
            android:text="Темная тема"
            android:textSize="16sp"
            android:textColor="#1A1B22"
            app:icon="@drawable/off"
            app:iconTint="#AEAFB4"
            app:iconGravity="end"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF"
            android:gravity="start"
            app:cornerRadius="0dp"
            android:text="Поделиться приложением"
            android:textSize="16sp"
            android:textColor="#1A1B22"
            app:icon="@drawable/share"
            app:iconTint="#AEAFB4"
            app:iconGravity="end"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF"
            android:gravity="start"
            app:cornerRadius="0dp"
            android:text="Написать в поддержку"
            android:textSize="16sp"
            android:textColor="#1A1B22"
            app:icon="@drawable/support"
            app:iconTint="#AEAFB4"
            app:iconGravity="end"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF"
            app:cornerRadius="0dp"
            android:text="Пользовательское соглашение"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="#1A1B22"
            app:icon="@drawable/open"
            app:iconTint="#AEAFB4"
            app:iconGravity="end"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>