<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    android:paddingVertical="@dimen/padding_vertical_settings"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/zero">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_back"
            android:text="@string/settings_button_text"
            app:icon="@drawable/baseline_arrow_back_24"
            style="@style/primary_settings_back_button"
            android:background="@android:color/transparent"
            app:iconSize="@dimen/button_size"
            app:iconPadding = "@dimen/button_size"
            />

        <Button
            android:paddingLeft="@dimen/button_corner_radius"
            android:layout_marginTop="@dimen/settings_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme_button_text"
            app:icon="@drawable/baseline_toggle_off_24"
            style="@style/primary_settings_button"
            android:background="@android:color/transparent"            />

        <Button

            android:paddingLeft="@dimen/button_corner_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_share_settings"
            android:text="@string/share_app_button_text"
            app:icon="@drawable/baseline_share_24"
            style="@style/primary_settings_button"
            android:background="@android:color/transparent"            />

        <Button

            android:paddingLeft="@dimen/button_corner_radius"
            android:id="@+id/support_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_button_text"
            app:icon="@drawable/baseline_support_agent_24"
            style="@style/primary_settings_button"
            android:background="@android:color/transparent"            />
        <Button

            android:paddingLeft="@dimen/button_corner_radius"
            android:id="@+id/link_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agreement_button_text"
            app:icon="@drawable/baseline_arrow_forward_ios_24"
            style="@style/primary_settings_button"
            android:background="@android:color/transparent"            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>