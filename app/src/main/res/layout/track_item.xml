<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context=".SettingsActivity"
    style="@style/Base.Theme.PlaylistMakerr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="@dimen/activity_search_padding"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            app:cardCornerRadius="@dimen/very_small_padding"
            app:cardElevation="@dimen/very_small_padding"
            app:cardPreventCornerOverlap="true"
            android:backgroundTint="@color/background">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:backgroundTint="@color/white"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/background">


            <TextView
                android:id="@+id/trackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/radius"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center_vertical"
                android:text="@string/input_hint"
                android:textColor="@color/track_text_color"
                android:textSize="@dimen/small_track_text_size"
                android:textStyle="bold"
                android:backgroundTint="@color/background"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="1dp"
                android:backgroundTint="@color/background">

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/radius"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/baseline_circle_24"
                    android:drawablePadding="@dimen/margine_top_track"
                    android:drawableTint="@color/grey"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/input_hint"
                    android:textColor="@color/track_small_text_color"
                    android:textSize="@dimen/small_text_track"
                    android:textStyle="bold"
                    android:backgroundTint="@color/background"/>

                <TextView
                    android:id="@+id/trackTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:paddingLeft="@dimen/margine_top_track"
                    android:text="@string/input_hint"
                    android:textColor="@color/track_small_text_color"
                    android:textSize="@dimen/small_text_track"
                    android:backgroundTint="@color/background"/>


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/four_dp"
            android:scaleType="fitEnd"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:tint="@color/track_small_text_color"
            tools:ignore="UseAppTint"
            android:backgroundTint="@color/background"/>
    </LinearLayout>
</LinearLayout>